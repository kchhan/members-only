extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input(type='text', name='first_name', required='true' value=(undefined===user ? '' : user.first_name))
    div.form-group
      label(for='family_name') Last Name:
      input(type='text', name='family_name', required='true' value=(undefined===user ? '' : user.family_name))
    div.form-group
      label(for='username') Username:
      input(type='text', name='username', required='true', value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input(type='password', name='password', required='true')
    div.form-group
      label(for='confirm_password') Confirm Password:
      input(type='password', name='confirm_password', required='true')
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

  p Already have an account? 
    a(href='/login') Log In 

  p
    a(href='/') Go Back

  